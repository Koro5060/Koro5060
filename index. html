<script>
  let point = 0;
  let level = 1;

  function check() {
    const sleep = document.getElementById("sleepTime").value;
    const wake = document.getElementById("wakeTime").value;
    const msg = document.getElementById("message");

    if (!sleep || !wake) {
      msg.textContent = "æ™‚é–“ã‚’å…¥åŠ›ã—ã¦ã­";
